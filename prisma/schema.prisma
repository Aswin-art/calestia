generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             String      @id @default(cuid())
  wallet_address String      @unique
  subscription   Int?
  UserVotes      UserVotes[]

  @@map("users")
}

model Proposals {
  id          String      @id @default(cuid())
  title       String
  description String
  upvote      Int
  downvote    Int
  UserVotes   UserVotes[]

  @@map("proposals")
}

model UserVotes {
  id          String    @id @default(cuid())
  user_id     String
  user        Users     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  proposal_id String
  proposal    Proposals @relation(fields: [proposal_id], references: [id], onDelete: Cascade)
  votes       Boolean

  @@map("user_votes")
}
